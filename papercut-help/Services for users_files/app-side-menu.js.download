$(function() {
		
	// Remove CSS
	$('link[href*="Skins/Default/Stylesheets/"]').remove();
		
	$(".menu.mc-component").on("loaded", function () { 
			
		// Nav
		// $(".nav").stick_in_parent();
		
		if ($(window).width() < 896) {
			//	$("header").stick_in_parent();
			$(".top-nav").prependTo('nav');
		}
		else {
			//	$("header").trigger("sticky_kit:detach");
			$(".top-nav").appendTo('header .auto');
		}
		
		$('.has-children').prepend('<span class="arrow"></span>');
		
		$('a.selected').parents('li').addClass('selected');	
		
		$(".arrow").click(function() {
		
				$('nav li').not($(this).parents('li')).removeClass('selected');		
				$(this).parent('li').toggleClass('selected');
		
			});
		
		$(".wrap").on("click", ".overlay, .nav-toggle", function() {
						
				setTimeout(function() {
					$('body').toggleClass('menu-open');
				}, 25);
		
				return false;
		
			});
		
		});

});

$(window).resize(function() {

	if ($(window).width() < 896) {
		//	$("header").stick_in_parent();
		$(".top-nav").prependTo('nav');
	}
	else {
		//	$("header").trigger("sticky_kit:detach");
		$(".top-nav").appendTo('header .auto');
	}	
				
});